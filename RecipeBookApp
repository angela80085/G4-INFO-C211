 * Description: Manages a collection of recipes and will provide
 * a graphical user interface to interact with the recipe book.
 */

package your.package.name;

import java.util.ArrayList;

public class RecipeBookApp {

    // The list of recipes in this recipe book.
    private ArrayList<Recipe> recipes;

    // Default constructor that creates an empty recipe book.
    public RecipeBookApp() {
        this.recipes = new ArrayList<Recipe>();
    }

    // Gets the list of recipes in this recipe book.
    public ArrayList<Recipe> getRecipes() {
        return recipes;
    }

    // Sets the list of recipes in this recipe book.
    public void setRecipes(ArrayList<Recipe> recipes) {
        this.recipes = recipes;
    }

    // Adds a recipe to the recipe book.
    public void addRecipe(Recipe recipe) {
        recipes.add(recipe);
    }

    // Removes a recipe from the recipe book by its title.
    public boolean removeRecipeByTitle(String title) {
        for (int i = 0; i < recipes.size(); i++) {
            Recipe current = recipes.get(i);
            if (current.getTitle().equalsIgnoreCase(title)) {
                recipes.remove(i);
                return true;
            }
        }
        return false;
    }

    // Finds and returns a recipe by its title, or null if not found.
    public Recipe findRecipeByTitle(String title) {
        for (int i = 0; i < recipes.size(); i++) {
            Recipe current = recipes.get(i);
            if (current.getTitle().equalsIgnoreCase(title)) {
                return current;
            }
        }
        return null;
    }

    // Starts the application (later this will start the GUI).
    public void startApp() {
        // TODO: Add code to start the graphical user interface.
        // For now, this is just a placeholder.
    }

    // Main method used for simple testing of the RecipeBookApp class.
    public static void main(String[] args) {
        RecipeBookApp app = new RecipeBookApp();
        System.out.println("RecipeBookApp started. Number of recipes: "
                + app.getRecipes().size());
    }
}
